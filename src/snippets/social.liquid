  {% endif %}
	{% if settings.linkedin_link != '' %}
		<li>
			<a href="{{ settings.linkedin_link }}" class="social__link" title="{{ shop.name }} on Linkedin" rel="noopener" target="_blank">{% render 'icon-linkedin' %}<span class="visually-hidden">Linkedin</span></a>
    </li>
  {% endif %}
	{% if settings.snapchat_link != '' %}
		<li>
			<a href="{{ settings.snapchat_link }}" class="social__link" title="{{ shop.name }} on Snapchat" rel="noopener" target="_blank">{% render 'icon-snapchat' %}<span class="visually-hidden">Snapchat</span></a>
    </li>
  {% endif %}
	{% if settings.feed_link != '' %}
		<li>
			<a href="{{ settings.feed_link }}" class="social__link" title="{{ shop.name }} Feed" rel="noopener" target="_blank">{% render 'icon-rss' %}<span class="visually-hidden">Feed</span></a>
    </li>
  {% endif %}
	</ul>
{% endif %}
