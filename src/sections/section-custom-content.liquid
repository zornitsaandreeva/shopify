{%- liquid
  assign desktop_height = section.settings.height
  assign mobile_height = section.settings.mobile_height
  assign width = section.settings.width

  if width == 'wrapper--full-padded'
    assign width = width | append: ' brick--margin'
  endif

  assign block_list = ''
  for block in section.blocks
    assign block_list = block_list | append: block.type | append: ','
  endfor

  assign border_class = ''
  if section.settings.borders
    assign border_class = 'brick--border'
  endif

  assign transparent_header = false
  assign non_image_block_types = 'text, newsletter, reviews, product, collection' | split: ','
  unless non_image_block_types contains section.blocks[0].type and non_image_block_types contains section.blocks[1].type
    assign transparent_header = true
  endunless

  assign animation_anchor = '#BrickSection--' | append: section.id
-%}

{%- style -%}
  #BrickSection--{{ section.id }} {
    --PT: {{ section.settings.padding_top }}px;
    --PB: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

<section id="BrickSection--{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="custom-content"
  {% if transparent_header %}data-overlay-header{% endif %}
  class="section-padding">
  {%- if section.blocks.size > 0 -%}
    <div class="brick__section brick--{{ section.blocks.size }} {{ border_class }} {{ width }} frame">
      {%- for block in section.blocks -%}
        {%- liquid
          assign bg_color = block.settings.bg_color
          assign text_color = block.settings.color
          assign padding_class = ''
          assign color_difference = bg_color | color_difference: settings.bg_color
          assign color_brightness = text_color | color_brightness
          assign text_color_class = ''

          if color_brightness > 127
            assign text_color_class = 'text-light'
          else
            assign text_color_class = 'text-dark'
          endif

          if color_difference > 10
            assign padding_class = ' has-padding'
          endif
        -%}

        {%- capture style -%}
          {%- unless bg_color == 'rgba(0,0,0,0)' or bg_color == blank -%}
            --bg: {{ bg_color }};
          {%- endunless -%}

          {%- unless text_color == 'rgba(0,0,0,0)' or text_color == blank -%}
            --text: {{ text_color }};
            --text-light: {{ text_color | color_mix: settings.bg_color, 70 }};
            --text-dark: {{ text_color | color_saturate: 10 | color_darken: 15 }};
          {%- endunless -%}
        {%- endcapture -%}

        {%- case block.type -%}
          {%- when 'image' -%}
            {%- render 'brick-image', block: block, style: style, padding_class: padding_class, animation_anchor: animation_anchor -%}

          {%- when 'text' -%}
            {%- render 'brick-text', block: block, style: style, padding_class: padding_class, animation_anchor: animation_anchor -%}

          {%- when 'newsletter' -%}
            {%- render 'brick-newsletter', block: block, style: style, padding_class: padding_class, animation_anchor: animation_anchor -%}

          {%- when 'review' -%}
            {%- render 'brick-review', block: block, style: style, padding_class: padding_class, animation_anchor: animation_anchor -%}

          {%- when 'product' -%}
            <div class="brick__block frame__item"{% if style != blank %} style="{{ style }}"{% endif %} data-prevent-transparent-header {{ block.shopify_attributes }}>
              <div class="brick__block__text{{ padding_class }}">
                <div class="brick__block__text__inner">
                  <div class="text-center">
                    {%- if block.settings.title != blank -%}
                      <p class="brick__product__subheading"
                        data-aos="hero"
                        data-aos-anchor="{{ animation_anchor }}"
                        data-aos-order="1">{{ block.settings.title }}</p>
                    {%- endif -%}
                    <div class="brick__product">
                      {%- assign product = all_products[block.settings.product] -%}
                      {%- if product != blank -%}
                        {%- render 'product-grid-item', product: product, index: forloop.index -%}
                      {%- else -%}
                        {%- render 'onboarding-product-grid-item', index: forloop.index, animation_delay: forloop.index0 -%}
                      {%- endif -%}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {%- when 'video' -%}
            <div class="brick__block frame__item {{ text_color_class }} {{ desktop_height }} {{ mobile_height }}"{% if style != blank %} style="{{ style }}"{% endif %} {{ block.shopify_attributes }}>
              <div class="brick__block__video frame wide-image">
                {%- render 'video' section: block, desktop_height: desktop_height, mobile_height: mobile_height, block_element: true -%}
              </div>
            </div>
          {%- when 'collection' -%}
            {%- assign block_collection = collections[block.settings.collection] -%}
            <div class="brick__block brick__block--collection frame__item"{% if style != blank %} style="{{ style }}"{% endif %} data-prevent-transparent-header {{ block.shopify_attributes }}>
              <div class="brick__block__collection">
                <div class="brick__look__content">
                  {%- if block.settings.title != blank -%}
                    <p class="look__title caps"
                      data-aos="hero"
                      data-aos-anchor="{{ animation_anchor }}"
                      data-aos-order="1">{{ block.settings.title }}</p>
                  {%- endif -%}

                  <div class="look__slider"
                    data-slider="{{ block.id }}"
                    data-options='{"watchCSS": true, "fade": true, "pageDots": false, "prevNextButtons": true, "adaptiveHeight": false}'
                    data-arrow-position-middle>
                    {%- if block_collection != blank -%}
                      {%- if block_collection.products.size > 0 -%}
                        {%- for product in block_collection.products limit: 5 -%}
                          <div class="look__slide look__slide--{{ block.id }}-{{ forloop.index0 }}" data-slide="{{ block.id }}-{{ forloop.index0 }}" data-slide-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
                            {% render 'product-grid-item', product: product, index: forloop.index %}
                          </div>
                        {%- endfor -%}
                      {%- else -%}
                        <div class="no-results">
                          <p><strong>{{ 'collections.general.no_matches' | t }}</strong></p>
                        </div>
                      {%- endif -%}
                    {%- else -%}
                      {%- for i in (1..2) -%}
                        <div class="look__slide look__slide--{{ block.id }}" data-slide="{{ block.id }}" data-slide-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
                          {%- assign product_index = forloop.index | plus: 2 -%}
                          {%- assign placeholder = 'product-' | append: product_index -%}
                          {%- render 'onboarding-product-grid-item', title: 'Nomad X Sunglasses', placeholder: placeholder, index: forloop.index, animation_delay: forloop.index0 -%}
                        </div>
                      {%- endfor -%}
                    {%- endif -%}
                  </div>
                </div>

              </div>
            </div>
          {%- when 'before-and-after' -%}
            <div class="brick__block brick__block--compare frame__item {{ desktop_height }} {{ mobile_height }}"{% if style != blank %} style="{{ style }}"{% endif %} {{ block.shopify_attributes }}>
              <div class="brick__block__compare">
                {%- render 'compare-images', image_1: block.settings.image_1, image_2: block.settings.image_2, image_position: block.settings.image_position, animation_anchor: animation_anchor, wrapper: section.settings.width -%}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  {%- else -%}
    {%- render 'no-blocks' -%}
  {%- endif -%}
</section>

